record(aSub, "$(CAMERA_NAME):$(SUFFIX):CentroidProc")
{
    field(SNAM, "find_centre")
    field(SCAN, ".1 second")

    field(INPA, "$(CAMERA_NAME):image2:ArrayData")
    field(NOA, "$(ARRAYSIZE)")
    field(FTA, "UCHAR")

    field(INPB, "$(CAMERA_NAME):image2:ArraySize0_RBV")
    field(NOB, "1")
    field(FTB, "FLOAT")

    field(INPC, "$(CAMERA_NAME):image2:ArraySize1_RBV")
    field(NOC, "1")
    field(FTC, "FLOAT")

    field(INPD, "$(CAMERA_NAME):$(SUFFIX):CentroidMethod")
    field(NOD, "1")
    field(FTD, "FLOAT")

    field(INPE, "$(CAMERA_NAME):$(SUFFIX):CentroidDownsampleX")
    field(NOE, "1")
    field(FTE, "FLOAT")

    field(INPF, "$(CAMERA_NAME):$(SUFFIX):CentroidDownsampleY")
    field(NOF, "1")
    field(FTF, "FLOAT")

    field(INPG, "$(CAMERA_NAME):$(SUFFIX):CentroidThreshold")
    field(NOG, "1")
    field(FTG, "FLOAT")

    field(INPH, "$(CAMERA_NAME):$(SUFFIX):CentroidThreshInc")
    field(NOH, "1")
    field(FTH, "FLOAT")

    field(INPI, "$(CAMERA_NAME):$(SUFFIX):CentroidMaxFract")
    field(NOI, "1")
    field(FTI, "FLOAT")

    field(INPJ, "$(CAMERA_NAME):$(SUFFIX):CentroidMinFract")
    field(NOJ, "1")
    field(FTJ, "FLOAT")

    field(INPK, "$(CAMERA_NAME):$(SUFFIX):CentroidSuccessive")
    field(NOK, "1")
    field(FTK, "FLOAT")

    field(INPL, "$(CAMERA_NAME):$(SUFFIX):CentroidCogDist")
    field(NOL, "1")
    field(FTL, "FLOAT")

    field(INPM, "$(CAMERA_NAME):$(SUFFIX):CentroidRectanglePercent")
    field(NOM, "1")
    field(FTM, "FLOAT")    
	
    field(INPN, "$(CAMERA_NAME):UseCustomCentroid")
    field(NON, "1")
    field(FTN, "FLOAT")

    field(INPO, "$(CAMERA_NAME):STREAMING")
    field(NOO, "1")
    field(FTO, "FLOAT")

    field(OUTA, "$(CAMERA_NAME):$(SUFFIX):COFG_X PP")
    field(FTVA, "FLOAT")
    field(NOVA, "1")

    field(OUTB, "$(CAMERA_NAME):$(SUFFIX):COFG_Y PP")
    field(FTVB, "FLOAT")
    field(NOVB, "1")

    field(OUTC, "$(CAMERA_NAME):$(SUFFIX):CentroidTimeElapsed PP")
    field(FTVC, "FLOAT")
    field(NOVC, "1")

    field(OUTD, "$(CAMERA_NAME):$(SUFFIX):CentroidFound PP")
    field(FTVD, "FLOAT")
    field(NOVD, "1")

    field(OUTE, "$(CAMERA_NAME):$(SUFFIX):ErrorCode PP")
    field(FTVE, "FLOAT")
    field(NOVE, "1")

    field(OUTF, "$(CAMERA_NAME):$(SUFFIX):EndThreshold PP")
    field(FTVF, "FLOAT")
    field(NOVF, "1")
}

