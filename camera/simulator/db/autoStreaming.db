record(longin, "$(CAMERA_NAME):INACTIVE_TIME_SET"){
	field(DESC, "Time in seconds")
	field(VAL, "10")
}

record(calcout, "$(CAMERA_NAME):INACTIVE_TIMER") {
  field(INPA, "$(CAMERA_NAME):STREAMING")
  field(INPB, "$(CAMERA_NAME):INACTIVE_TIMER")
  field(INPC, "$(CAMERA_NAME):INACTIVE_TIME_SET")
  field(CALC, "a?  0 : (b <= c ? b + 1 : 0)")
}

record(calcout, "$(CAMERA_NAME):INACTIVE_TIMER_CMD") {
  field(INPA, "$(CAMERA_NAME):INACTIVE_TIMER PP")
  field(INPB, "$(CAMERA_NAME):INACTIVE_TIME_SET")
  field(CALC, "a > b ? 1 : 0")
  field(OUT, "$(CAMERA_NAME):INACTIVE_TIMER_SEQ PP")
  field(OOPT, "Transition To Non-zero")
  field(SCAN, "1 second")
  field(SDIS, "$(CAMERA_NAME):STREAM_AUTO")
  field(DISV, "0")
}

record(seq, "$(CAMERA_NAME):INACTIVE_TIMER_SEQ"){
	field(DOL1, "0")
	field(LNK1, "$(CAMERA_NAME):cam1:Acquire PP")
	field(DOL2, "1")
	field(LNK2, "$(CAMERA_NAME):cam1:Acquire PP")
	field(DLY2, "2")
}

record(bi, "$(CAMERA_NAME):STREAM_AUTO"){
	field(ZNAM, "Disabled")
	field(ONAM, "Enabled")
	field(VAL, "1")
	field(PINI, "YES")
}