record(stringin, "$(p):$(monitor):CAMERA")
{
    field(DESC, "Camera IOC prefix")
    field(VAL, "")
    field(PINI, "YES")
}

record(ai, "$(p):$(monitor):RATE")
{
    field(DESC, "Refresh rate for monitor")
    field(VAL, "0.1")
    field(EGU, "sec")
    field(PINI, "YES")
}

record(stringin, "$(p):$(monitor):COLORMAP")
{
    field(DESC, "colourmap name")
    field(VAL, "jet")
	field(PINI, "YES")
}

record(bi, "$(p):$(monitor):ASPECT")
{
    field(DESC, "full screen or keep aspect ratio")
    field(VAL, "1")
    field(PINI, "YES")
    field(ZNAM, "stretched to full screen")
    field(ONAM, "Keeping the aspect ratio")
}

record(bi, "$(p):$(monitor):LABEL")
{
    field(DESC, "display label or not")
    field(VAL, "1")
    field(PINI, "YES")
    field(ZNAM, "label not displayed")
    field(ONAM, "label displayed")
}

