# populate the :CAMERA and :MONITOR waveforms
# from data in cameras.list and monitors.list
record(aSub, "$(p):LIST:READ")
{
    field(SNAM, "readlist")
    field(PINI, "YES")

    field(OUTA, "$(p):LIST:CAMERA")
    field(FTVA, "STRING")
    field(NOVA, "256")

    field(OUTB, "$(p):LIST:MONITOR")
    field(FTVB, "STRING")
    field(NOVB, "256")

    field(OUTC, "$(p):LIST:COLORMAP")
    field(FTVC, "STRING")
    field(NOVC, "256")

}

record(waveform, "$(p):LIST:CAMERA")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

record(waveform, "$(p):LIST:MONITOR")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

record(waveform, "$(p):LIST:COLORMAP")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

# read colourmaps from configuration file
record(aSub, "$(p):CMAP:READ")
{
    field(SNAM, "readcmap")
    field(PINI, "YES")
    field(OUTA, "$(p):CMAP:GRAY")
    field(FTVA, "STRING")
    field(NOVA, "256")

    field(OUTB, "$(p):CMAP:JET")
    field(NOVB, "256")
    field(FTVB, "STRING")

    field(OUTC, "$(p):CMAP:HOT")
    field(NOVC, "256")
    field(FTVC, "STRING")

    field(OUTD, "$(p):CMAP:REDBLUE")
    field(NOVD, "256")
    field(FTVD, "STRING")

    field(OUTE, "$(p):CMAP:BONE")
    field(NOVE, "256")
    field(FTVE, "STRING")
}

record(waveform, "$(p):CMAP:GRAY")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

record(waveform, "$(p):CMAP:JET")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

record(waveform, "$(p):CMAP:HOT")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

record(waveform, "$(p):CMAP:REDBLUE")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

record(waveform, "$(p):CMAP:BONE")
{
    field(NELM, "256")
    field(FTVL, "STRING")
}

