record(stringin, "$(p):$(monitor)")
{
	field(DESC, "Camera IOC name")
	field(VAL, "$(camera)")
	field(PINI, "YES")
}

record(ai, "$(p):$(monitor):RATE")
{
    field(DESC, "Refresh rate for monitor")
    field(VAL, "1")
    field(EGU, "Hz")
	field(PINI, "YES")
}

record(stringin, "$(p):$(monitor):COLMAP")
{
    field(DESC, "Name of colourmap to use")
    field(VAL, "")
	field(PINI, "YES")
}
