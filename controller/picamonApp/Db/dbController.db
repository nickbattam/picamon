record(stringin, "$(p):$(monitor)")
{
	field(DESC, "Camera IOC name")
	field(VAL, "$(camera)")
	field(PINI, "YES")
}

record(ai, "$(p):$(monitor):RATE")
{
    field(DESC, "Refresh rate for monitor")
    field(VAL, "1")
    field(EGU, "Hz")
	field(PINI, "YES")
}

record(stringin, "$(p):$(monitor):COLMAP")
{
    field(DESC, "Name of colourmap to use")
    field(VAL, "")
	field(PINI, "YES")
}

record(mbbi, "$(p):COLORMAPS")
{
    field(DESC, "List of MatPlotLib colourmaps")
    field(ZRST, "autumn")
    field(ONST, "bone")
    field(TWST, "cool")
    field(THST, "copper")
    field(FRST, "flag")
    field(FVST, "gray")
    field(SXST, "hot")
    field(SVST, "hsv")
    field(EIST, "jet")
    field(NIST, "pink")
    field(TEST, "prism")
    field(ELST, "spring")
    field(TVST, "summer")
    field(TTST, "winter")
}